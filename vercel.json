{
  "version": 2,
  "builds": [
    {
      "src": "./api/app.py",
      "use": "@vercel/python",
      "framework": "flask" 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api"  
    }
  ],
  "staticRoutes": [
    {
      "src": "/static",
      "dest": "./api/templates"
    }
  ]
}